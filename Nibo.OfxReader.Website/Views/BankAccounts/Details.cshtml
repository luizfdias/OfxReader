@model Nibo.OfxReader.Website.Models.BankAccount

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Detalhes da conta <small>Banco: @Html.DisplayFor(model => model.BankId) | Conta bancária: @Html.DisplayFor(model => model.Number)</small></h1>
</div>

<div>    
    
    <table class="table table-striped">        
        <tr>
            <th>Data da postagem</th>
            <th>Descrição</th>
            <th>Valor da transação</th>
            <th>CheckNum</th>            
        </tr>

        @foreach (var item in Model.Transactions.OrderBy(x => x.PostDate))
            {
            <tr>
                <td>@item.PostDate</td>
                <td>@item.Memo</td>
                <td>@item.Amount</td>                
                <td>@item.CheckNum</td>                
            </tr>
        }

    </table>

</div>

@Html.ActionLink("Voltar", "Index", "BankAccounts", new { @class = "btn btn-default" })

